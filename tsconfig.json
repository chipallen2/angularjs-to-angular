{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2017", "dom"],
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "typeRoots": ["node_modules/@types"],
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "tests"]
}
